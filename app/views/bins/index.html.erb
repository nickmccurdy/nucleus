<h1>Listing bins</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bins.each do |bin| %>
      <tr>
        <td><%= bin.title %></td>
        <td><%= bin.description %></td>
        <td><%= bin.body %></td>
        <td><%= link_to 'Show', bin %></td>
        <td><%= link_to 'Edit', edit_bin_path(bin) %></td>
        <td><%= link_to 'Destroy', bin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bin', new_bin_path %>
